[user]
	name = Martin Ledgard
	email = martin@le6o.com

[color]
	ui = True

[merge]
	log = True

[alias]
        br = branch -v
	ci = commit
	co = checkout
        ls = ls-files
	st = status -s

        amend = commit --amend -C HEAD

	diffw = diff --word-diff

	logg = log --graph --date=relative --abbrev-commit --format=format:'%C(yellow)%h%Creset%Cgreen%d%Creset %s %Cblue(%cr)%Creset'

	pick = cherry-pick

	staged = diff --cached

[rerere]
	enabled = True
